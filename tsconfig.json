{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "strict": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": ["src"]
}
